@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>Role List</h1>
<table class="table table-bordered table-striped table-sm m-1 p-1">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Users</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td></td>
                <td>
                    <form asp-route-id="@user.Id" asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                    </form>

                </td>
            </tr>

        }
    }

</table>
