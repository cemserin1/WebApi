@model InGame.Web.Models.ProductModel
@{
}
@if (Model.Id > 0)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}
@if (Model.Id > 0)
{
    <form class="m-1 p-1" asp-action="Edit" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <label>Category</label>
        @{await Html.RenderPartialAsync("CategoryDropDown", new InGame.Web.Models.CategoryDropDownModel());}
        <br />
        <div class="form-group">
            <label asp-for="IsActive">Is Active?</label>
            <input asp-for="IsActive" class="" type="checkbox"/>
        </div>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </form>
}
else
{
    <form class="m-1 p-1" asp-action="Create" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        @{await Html.RenderPartialAsync("CategoryDropDown", new InGame.Web.Models.CategoryDropDownModel());}
        <br />
        <div class="form-group">
            <label asp-for="IsActive">Is Active?</label>
            <input asp-for="IsActive" class="" type="checkbox" />
        </div>

        
        <br />
        <input type="submit" class="btn btn-primary" value="Submit" />
    </form>
}

